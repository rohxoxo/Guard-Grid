{
  "name": "guard-grid",
  "version": "1.0.0",
  "description": "A software that serves Security Companies in dealing with their day to day operations.",
  "main": "src/server.js",
  "scripts": {
    "dist": "npx tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/server.ts",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop guard-grid",
    "restart:pm2": "pm2 restart guard-grid",
    "logs:pm2": "pm2 logs guard-grid",
    "status:pm2": "pm2 status",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "node test/test-guards-api.js",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.{ts}": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^24.0.13",
    "@types/source-map-support": "^0.5.10",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^15.2.13",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "dotenv-flow": "^4.1.0",
    "express": "^5.1.0",
    "mongoose": "^8.16.4",
    "source-map-support": "^0.5.21",
    "winston": "^3.17.0"
  }
}
